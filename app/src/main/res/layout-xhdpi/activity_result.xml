<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.IDAP.derzkaya.ResultActivity"
    android:background="@drawable/xhdpi_background"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/logo_mini"
            android:layout_gravity="top|center_horizontal" />
<RelativeLayout
    android:layout_width="280dp"
    android:layout_height="134dp"
    android:gravity="center"
    android:layout_weight="0.35">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/videoView"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_alignParentTop="true" />
</RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/save_on" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/f_on"
            android:onClick="shareOnFacebook"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/f_on" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_main_button"
            android:focusableInTouchMode="true"
            android:background="@drawable/back_on"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_gravity="left" />

</LinearLayout>
