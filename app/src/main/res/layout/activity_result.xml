<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dev.illiakaliuzhnyi.derzkaya.ResultActivity"
    android:background="#ff323232"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="92dp"
        android:id="@+id/imageView2"
        android:background="@drawable/crown"
        android:layout_marginBottom="25dp" />

    <VideoView
        android:layout_width="247dp"
        android:layout_height="207dp"
        android:id="@+id/videoView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button"
        android:onClick="saveResult" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:id="@+id/imageButton"
        android:layout_marginTop="25dp"
        android:background="@drawable/facebook_share"
        android:onClick="shareOnFacebook"
        android:layout_weight="0.07" />
</LinearLayout>
