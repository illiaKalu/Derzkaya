<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dev.illiakaliuzhnyi.derzkaya.RecordActivity"
    android:background="#ff323232"
    android:orientation="vertical"
    android:gravity="bottom|center"
    >

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:format="%s"
        android:text="40sp"
        android:layout_gravity="right"
        android:layout_marginBottom="300dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="45dp">

        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/back_to_main"
            android:focusableInTouchMode="true"
            android:background="@drawable/left_arrow"
            android:onClick="backToMainActivity"
            android:layout_marginRight="30dp" />

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="47dp"
            android:id="@+id/record"
            android:background="@drawable/record_image_button"
            android:onClick="startRecord"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="46dp"
            android:id="@+id/microphoneAction"
            android:background="@drawable/microphone_button_image"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
</LinearLayout>
